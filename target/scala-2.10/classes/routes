# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /main                  		controllers.Application.main()
POST	/autenticate				controllers.Application.authenticate()
GET     /login                      controllers.Application.login()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#rutas para controlador usuarios
GET     /show/:id                      controllers.Application.showUser(id: Long)
GET     /showrol/:id                      controllers.Application.showRol(id: String)
GET     /usersbyrol/:id                      controllers.Application.getUsersByRol(id: String)
